doctype html
html
head
  meta(charset='utf-8')
  title  Online Shopping System - Main Project

  link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')

  link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css')
  script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')

  script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')

  link(rel='stylesheet', type='text/css', href='style.css')
  script(language='Javascript', src='index.js')

block body
    .container-fluid
      header
        nav.navbar.navbar-default.navbar-fixed-top
          .container
            // Brand and toggle get grouped for better mobile display
            .navbar-header
              button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href="/") Online Shopping System
            // Collect the nav links, forms, and other content for toggling
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
             ul.nav.navbar-nav
              li
                a(href='/categories') Categories
              li
                a(href='/createlisting') Create Listing
              li
                a(href='/account') Profile
              li
               form.navbar-form.navbar-right(action = "/shoppingCart")
                button.btn.btn-default Shopping Cart  
              li
               form.navbar-form.navbar-right(role='search', action = "/search", method = "get")
                .form-group
                 input.form-control(type='text', placeholder='Search', name = "searchString")
                button.btn.btn-default(type='submit') Search
              li
               form.navbar-form.navbar-right(action = "#login")
                button.btn.btn-default Login
              li
               form.navbar-form.navbar-right(action = "#signup")
                button.btn.btn-default Sign Up 
      .container.text-center
        .row.content
          .col-sm-2.sidenav
          #content.col-sm-8.text-left
            h1 #{title}
            .container
              if cart != undefined && cart.length > 0
                table.table.table-hover
                  tr
                    th Item Name
                    th Price
                    th Quantity
                  each item in cart
                    tr
                      td #{item.label}
                      td $ #{item.price}
                      td #{item.quantity}
                      td
                        form(action='/shoppingCart', method='post') 
                          button.btn.btn-default Delete

              else
                br
                p No items in Shopping Cart

           
  

    .navbar.navbar-default.navbar-fixed-bottom
      .container
        p.navbar-text.pull-left Â© Online Shopping System

